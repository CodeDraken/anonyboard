{
  "name": "anonyboard",
  "version": "1.0.0",
  "description": "an anonymous message board",
  "main": "index.js",
  "repository": "git@github.com:CodeDraken/anonyboard.git",
  "author": "CodeDraken",
  "license": "MIT",
  "engines": {
    "node": "8.9.0",
    "npm": "5.5.1"
  },
  "standard": {
    "globals": ["$", "jQuery", "fetch"],
    "ignore": [
        "node_modules/**"
    ],
    "parser": "babel-eslint",
    "envs": ["jest", "mocha", "node"]
  },
  "scripts": {
    "start": "NODE_PATH=. node index.js",
    "start-watch": "NODE_PATH=. nodemon index.js",
    "test": "NODE_ENV=test NODE_PATH=. mocha --recursive tests",
    "test-watch": "nodemon --exec 'yarn test'",
    "client": "cd client && yarn start",
    "dev": "concurrently \"yarn start-watch\" \"yarn client\"",
    "lt": "lt -p 5000 -s anonyboardlt000",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "lint": "standard",
    "lint-fix": "standard --fix"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-env": "^1.6.1",
    "concurrently": "^3.5.1",
    "expect": "^22.0.6",
    "localtunnel": "^1.8.3",
    "mocha": "^4.1.0",
    "nodemon": "^1.14.10",
    "standard": "^10.0.3",
    "superagent": "^3.8.2",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "mongodb": "^3.0.1",
    "mongoose": "^4.13.9"
  }
}
